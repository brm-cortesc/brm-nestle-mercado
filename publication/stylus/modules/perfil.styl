#perfil
	.img-perfil
		border-radius 100%
		border 0.5em solid darken(AzulBase, 40%)
		height 15em
		overflow hidden
		position relative
		width @height
		
		img
			display inline-block
			margin 0 auto
			max-width 20em
		

