.cdb
	.text-title
		text-transform uppercase
		letter-spacing -2px
		text-align left
		position relative
		font-size 24px
		padding-bottom 10px
		margin 20px auto 10px
		
		&::after
			background-color AzulBase
			bottom 0
			content ''
			display block
			height 5px
			pointer-events none
			position absolute
			width 120px
			

	h1.text-title
		font-size 30px
		margin-bottom 40px
		margin-top 40px
		text-align center
		
		&::after
			left 50%
			transform translate3d(-50%,0,0)
			
	img
		height auto
		max-width 100%
		width 100%

	& > p
		font-size 16px
		line-height 1.1
		text-align center
			
		
	.contenedor-evento
		
						
		.prox-evento			
			position relative
			
			.fecha-evento
				background #fff
				height 60px
				left 10px
				top @left
				position absolute
				width @height
				
				h3
					font-size 26px
					font-weight bold
					line-height 0.9
					margin 0
					padding 13px
					text-align center
					
					span
						display block
						
						&.mes
							font-size 14px

				
	.legales
		margin-bottom 30px
		margin-top @margin-bottom

.container-logo-cdb	
	margin-top 40px
	box-shadow 0px 2px 2px 2px rgba(0,0,0,0.1)
	
	h2
		border none
		padding 0
		margin 0
	
	img
		display block
		height auto
		max-width 100%
		padding 20px


.container-galeria-cdb
	a.btn-primary
		cursor pointer	
		display inline-block
		font-size 1.8rem
		margin 1rem 1.5rem
		max-width 45%
		vertical-align top
		width 100%

		&.active
			background-color transparent !important
			border-bottom 2px solid AzulBase
			box-shadow none
			color AzulBase
			pointer-events none
			
	.galeria-list
		& > p
			font-size 1.8rem
			margin 1rem auto 3rem
			
		.galeria
			position relative
			margin-bottom 3rem
			opacity 0	

			.btn
				border-radius 100%
				color AzulBase
				font-size 3rem
				height 3rem
				margin 0
				padding 0
				position absolute
				right 2rem
				text-align center
				text-shadow 0px 0px 5px rgba(0, 0, 0, 0.25)
				top 0.5rem
				width @height
				z-index 2
				
				&::after
					background-color #fff
					border-radius 100%
					content ''
					display block
					height 90%
					left 5%
					position absolute
					top 5%
					width @height
					z-index -1
			
			.content-title-gallery
				background-color AzulBase
				color #fff
				min-height 10rem
				padding 0
				position relative
				text-align center
				transition all ease-in-out 0.3s
				width 100%
				
				
				h3
					font-size 1.6rem
					left 50%
					margin 0
					padding 0
					position absolute
					text-transform uppercase
					top 50%
					transform translate3d(-50%,-50%,0)
					width 95%
				
					a
						color #fff
						display block
						padding 1rem 0.5rem
						
						&:hover
							text-decoration none
							

				&:hover
					background-color darken(AzulBase, 40%)
						

	.galeria-single
		margin-bottom 3rem
		
		
		h3.text-center
			text-transform uppercase
		
		& > p
			font-size 1.8rem
			margin 1rem auto 3rem
			
		.galeria-item
			margin 1.5rem 0
			opacity 0
			overflow hidden
			position relative
			
			a
				background-color rgba(AzulBase, 0.5)
				bottom 0
				height 100%
				left 0
				color #fff
				position absolute
				right 0
				font-size 3rem
				text-align center
				top 0
				transition all ease-in-out 0.3s
				transform scaleX(0) 
				width @height
				
				&::before
					position absolute
					top 50%
					left 50%
					transform translate3d(-50%,-50%,0)
					
				
				&:hover
					text-decoration none
					
			&:hover
				a
					transform scaleX(1)
			

