.container-plato
	
	.container-tooltips
		position relative
		
		.plato-tooltip
			background-color rgba(255, 255, 255, 0.8)
			box-shadow 0px 0px 5px 0px rgba(0, 0, 0, 0.5)
			padding 1rem 2rem
			position absolute
			opacity 0
			transition all ease-in-out 0.3s
			width 26rem
			z-index 3
			
			h3
				color AzulBase
				font-size 1.6rem
				
			p
				font-size 1.3rem
				font-weight Light
				
			&::after,
			&::before
				content ''
				display block
				position absolute
				pointer-events none
				z-index -1
				
			&::before
				background-color AzulBase
				border-radius 100%
				height 1rem
				width @height

			&::after
				border-bottom 1px solid AzulBase
				border-left 1px solid AzulBase
				height 15rem
				width 27rem
				
			.hotspot
				background-color transparent
				border-radius 100%
				cursor pointer 
				height 8rem
				position absolute
				width 8rem
				
			.tooltip-content
				pointer-events none
				
			&.active
				opacity 0.99
				pointer-events none
			
			&.tooltip-aceites
				top -11rem
				
				&::after
					border-left none
					border-right 1px solid AzulBase
					height 7rem
					bottom -1rem
					right -3rem
					transform skewX(-22deg)
					
				&::before
					bottom 5.8rem
					right -4.9rem
					
				.hotspot
					bottom -0.3rem 
					height 10rem 
					right -7.7rem 
					width 10rem 
					
			&.tooltip-agua
				right 34rem
				top 21rem
				
				&::after
					border-left none
					border-right 1px solid AzulBase
					height 7.7rem
					left 2rem
					top -9.3rem
					transform skewX(-28deg)
				
				&::before
					right -5.5rem
					top -9.8rem
					
				.hotspot
					height 16rem
					right -15.1rem
					top -20.4rem
					width @height


			&.tooltip-frutas
				top 23rem
				
				&::after
					border-left none
					border-right 1px solid AzulBase
					bottom -1rem
					height 10rem
					right -3rem
					transform skewX(-22deg)
					
				&::before
					right -5.5rem
					top 13.5rem
					
				.hotspot
					height  25rem 
					right  -14.8rem 
					top  0 
					width  16rem 


			&.tooltip-granos
				right 5rem
				top -11rem
				
				&::after
					border-bottom none
					border-top 1px solid AzulBase
					height 8rem
					left -3.5rem
					top 32rem
					transform skewX(-29deg)
					
				&::before
					bottom -10rem
					left -6rem
					
				.hotspot
					bottom -14.6rem
					height 12rem
					left -10.2rem
					width 12rem

			&.tooltip-proteinas
				bottom 3rem
				right 0
				
				&::after
					bottom -1.4rem
					transform skewX(32deg)
					left -6rem
				
				&::before
					bottom 13rem
					left -11rem
					
				.hotspot
					top 10rem
					left -12rem
					height 18rem
					width 9rem
					transform rotate(43deg)
			

