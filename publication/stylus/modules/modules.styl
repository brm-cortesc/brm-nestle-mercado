aside
	.module-box
		
		h3, p
			height auto !important
			
	.readmore
		display inline-block
		padding 8px 17px !important


.module-box
	relative
	margin-top 1.5em
	
	div
		a
			text-decoration none
			&:hover,
			&:focus,
			&:active
				text-decoration none
	
	h3
		height 3.3em
	
	p
		height 2.9em
	
	.img-wrapper
		position relative
		margin-bottom .5em
		
		img
			display block
			height auto
			max-width 100%
		
		.dia-semana
			absolute bottom 0 right 0
			background-color Verde
			padding 0.25em 1em
			
			h4
				color #fff
				text-transform uppercase

		.sticker
			absolute bottom 0.3em left 0
			
			
	.title
		padding 1em 0
		transition all ease-in-out 0.3s
		
		h2
			text-shadow 0px 0px 5px rgba(0, 0, 0, .3)
			color #fff
			text-align center
			text-transform uppercase
			margin 0
			
			a
				color #fff
				text-decoration none
				transition all ease-in-out 0.3s
			
	&:hover		
		.readmore
			// background-color darken(AzulBase, 40%)
			transform scale(1.1)
			
		.share
			opacity 0.99
			transform translateX(0)
			
	//Bienestar
	&-bienestar
		// margin-top 1.5em
		.title
			background-color Naranja
			
			&:hover
				background-color darken(Naranja, 20%)
			

	
	//Loncheras
	&-lonchera
		margin-top 0em
		.title
			background-color AzulBase
			
			&:hover
				background-color darken(AzulBase, 20%)
				
		.views-row
			img
				max-width 100%
				
		.views-field-title
			font-size 1.5em
			
		.shareThis
			padding 0.3em 1em
		
	//Nutricion
	&-nutricion
		// margin-top 1.5em
		.title
			background-color Verde
			
			&:hover
				background-color darken(Verde, 20%)
	
	// Recetas
	&-receta
		
		h3
			font-size 1.3em
		
		.shareThis
			padding 0em 1em
			
			.shareThis
				width 35%
		
	//Salud
	&-salud
		// margin-top 1.5em
		.title
			background-color Rojo
			
			&:hover
				background-color darken(Rojo, 20%)
		

		

	//Modules Club del bienestar
	&-talleres, &-conferencias, &-valoraciones
		
		.title
			background-color lighten(AzulBase, 10%)
			

			&:hover
				background-color darken(AzulBase, 10%)


.shareThis
	background-color: GrisClaro
	display inline-block
	padding 0.5em 1em
	transition all ease-in-out 0.3s
	vertical-align middle
	width 55%
	
	.fa
		color AzulBase
		cursor pointer
		font-size 1.1em
		padding 0 0.5em
		transition all ease-in-out 0.3s
		
		&:hover
			color darken(AzulBase, 40%)
			
	.tiempo
		display inline-block
		font-size 0.8em
		height auto
		margin-top 1em
		vertical-align middle
		
		span
			color AzulBase
			font-size 1.1em

	
.readmore
	color #fff
	display inline-block
	transition all ease-in-out 0.3s
	vertical-align middle
	width 40%
	
	a
		color #fff
	
		&:hover
			text-decoration none
	

.wrapper-vermas
	background-color GrisClaro
	
	&:hover		
		.readmore
			// background-color darken(AzulBase, 40%)
			transform scale(1.1)
			
		.share
			opacity 0.99
			transform translateX(0)
	
	
	.article-action
		margin-top 0.2em
		text-align right
	
	.btn
		text-transform capitalize
		margin 0 auto
		margin-left 1em	
		width 100%
				

	.buttons-share
		absolute bottom 2em
		box-shadow 0px 0px 2px 2px rgba(0, 0, 0, .25)
		opacity 0
		pointer-events none
		transform translateY(-1em)
		transition all ease-in-out 0.2s
		z-index 2

	.readmore
		transition all ease-in-out 0.3s
		
	.share
		background-color transparent
		border 0
		border-radius 0.1em
		color darken(AzulBase, 40%) !important
		display inline-block
		font-size 1.3em
		margin 0.2em auto 0
		opacity 0
		padding 0
		text-align center
		transform translateX(1em)
		transition all ease-in-out 0.3s
		vertical-align middle
		width 1.5em
		
		&:hover
			box-shadow none !important
			color lighten(AzulBase, 10%) !important
	
	.tiempo
		font-size 0.8em
		margin-top 1em
		vertical-align middle
		
		span
			color AzulBase
			font-size 1.1em


