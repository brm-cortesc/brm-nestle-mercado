// input
// 	font-family Roboto
// 	text-align center

	&::-webkit-input-placeholder
		color AzulBase !important
	&::-moz-placeholder
		color AzulBase !important 
	&:-ms-input-placeholder
		color AzulBase !important 
	&:-moz-placeholder
		color AzulBase !important
		

		
label
	color darken(AzulBase, 40%)
	float left
	font-family Varela
	font-size 1.2em
	width 100%


#selector-preferencias
	
	.active
		background-color lighten(gray, 90%)
		
		.check-active
			display block !important
			opacity 0.9 !important
	
	.active-equis
		background-color lighten(gray, 100%)
		
		.check-active
			display none !important
			opacity 0 !important
		
		.check-active-two
			display block !important
			opacity 0.9 !important
			
				
	.form-control
		border 2px solid 
		border-radius 10px
		color darken(AzulBase, 40%)

	.ajustesCaptcha
		padding 0px 0px 0px 0px
		height 40px

	.check-active, .check-quit
		position absolute
		z-index 1
		padding 0.05em 0.028em
		transition all ease-in-out 0.3s

	.boton-brand
		border-radius 5em
		cursor pointer
		display inline-block
		margin-bottom 1em
		outline 0
		overflow hidden
		padding 0.26em
		position relative
		transition all ease-in-out 0.3s
		vertical-align middle
		

		&:hover
			background-color lighten(gray, 90%)
			
			.check-active
				display block
				opacity 0.9
				
				

		input[type="checkbox"]
			position absolute
			z-index 0
			width 100%
			opacity 0


		.content, .logo
			display inline-block
			vertical-align top
			
		.check-active
			display none
			opacity 0
		
		.check-active-two
			display none
			opacity 0
			

		.content
			padding-top 1.1em
			width 60%
			
			h3
				text-align left
				margin 1em auto 0.2em
				
			p
				font-family Varela
				margin-top 0.2em
				text-align left
	
		
		.logo
			margin 0
			width 92px
			padding-left 25px
			padding-top 3px
		
		.circle-check
			background-color green
			border-radius 100px
			color white
			padding-left 0.6em
			width 92px

		.circle-uncheck
			background-color red
			border-radius 100px
			color white
			padding-left 0.6em
			width 92px

	.botonRegistro
		margin 0 auto

	.btn-warning
		width 100%

	.check-active, .check-quit, .check-active-two
		position absolute
		z-index 1
		padding 0.05em 0.028em
		transition all ease-in-out 0.3s

	.checkbox, .radio
		float left
		margin-top 10px !important
		width 50%

	.bordesCurvos
		border-radius 10px

	.error-campo
		color red
		float left
		font-size 0.8em
		width 100%

	.floating-label
		color white !important
		font-family Varela
		font-size 1.3em !important
		left 25% !important
		top 25% !important
		
	.form-control
		background-color white
		background-image none
		background-size contain 
		border-radius 10px

	.form-control[readonly]
		background-color white
		border 0px
		font-size 1em
		color AzulBase

	.form-control:focus
		background-color white
		background-image none !important
		border 2px solid
		color darken(AzulBase, 40%)
		border-radius 10px

	.img-responsive
		margin 0 auto

	.icon
		font-size 3em
		line-height 2.1
		color VerdeSelectIcon
		padding-left 0.2em
	
	.icon-white
		font-size 3em
		line-height 1
		color white
		padding-left 0.2em

	.icon-pilares
		font-size 3.5em
		line-height 0.7
		color white
		padding-left 0.2em
		padding-right 1.2em
		padding-bottom 0.3em


	.check
		border 2px solid
		color darken(AzulBase, 40%)
		
	.circle:focus
		border 2px solid
		color darken(AzulBase, 40%)

	.radio label
		padding-left 35px

	.radio-primary
		input[type=radio]:checked
			& ~ .circle
				border-color AzulBase

	select.form-control
		background-color white
		background-image none !important
		border 2px solid
		color darken(AzulBase, 40%)
		border-radius 10px !important

	.selection
		margin-bottom 30px
		text-align center

		.content, .logo
			display inline-block
			vertical-align top

		.content
			padding-top 1.1em
			
			h2
				font-size 2em
				text-align left
				margin 0 auto 0.2em
				
			p
				font-family Varela
				margin-top 0.2em
				text-align left
		.logo
			margin 0
			width 50px
			padding-left 0px
			padding-top 12px
		


	.selectRegister
		width 100%

	.select-default
		background-color AzulBase !important
		border-radius 100px

		p
			color white

	.select-nutricion
		background-color Verde !important
		border-radius 100px
		
		h2
			color white
			
	.select-salud
		background-color Rojo !important
		border-radius 100px
		
		h2
			color white

	.select-bienestar
		background-color Naranja !important
		border-radius 100px
		
		h2
			color white

	.spaceError
		margin-bottom 0px

	.subir-archivo
		background-color AzulBase !important
		border 0px !important
		color white

	.titulo-selector
		font-family Roboto
		font-weight 300
		font-size 1.3em
		

.tipoc
	cursor pointer