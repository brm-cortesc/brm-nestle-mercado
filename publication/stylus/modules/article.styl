#comentarios
	#espacio-comentario
		border 0.1em solid GrisClaro
		padding 0.5em
		transition all ease-in-out 0.2s
		
		&:focus, &:active, &:hover
			border-color transparent

	.form-group .form-control:focus, .form-group-default .form-control:focus
		background-image linear-gradient(AzulBase, AzulBase), linear-gradient(AzulBase, AzulBase) !important
		
#comentar
	text-align right
	display inline-block

.article
	&-body
		background-color  #fff
		padding 3em
		position relative
		z-index 1

		.destacado
			color GrisOscuro
			font-family Roboto
			font-weight Light
			
		.shareThis
			padding 0.5em 2em
			
			.article-action
				margin-left -2.2em
				text-align left
				
	//Head de articulos y secciones
	&-head
		min-height 31em
		overflow hidden
		position relative
		transition all ease-in-out 0.3s
		
		h1
			color darken(AzulBase, 40%)
			font-size 2em
			margin-top 0em
			
		h2
			color #fff
			font-size 1.2em
			margin-top 1em
	
	
		//Icono de la sección	
		.btn
			//Color Icono
			&.btn-bienestar
				background-color Naranja

				&:hover
					background-color lighten(Naranja, 5%)
					
			&.btn-nutricion
				background-color Verde

				&:hover
					background-color lighten(Verde, 5%)
					
			&.btn-salud
				background-color Rojo

				&:hover
					background-color lighten(Rojo, 5%)
				
			&.btn-fab
				color #fff
				cursor default
				display inline-block
				font-size 3em
				height 2em
				margin 0.2em auto
				padding 0.5em 0 0
				position relative
				transition all ease-in-out 0.2s
				width @height
				z-index 1
				
				&:before
					border 0.05em solid
					border-radius 100%
					height 2em
					padding 0.3em
					width 2em
		
		
		.calorias
			// color darken(AzulBase, 50%)
			color #fff
			font-size 1.8em
			text-align center
			margin 0
			
			.num-calorias
				font-size 2em
		
		//Texto tiempo preparación			
		.tiempo
			// color darken(AzulBase, 60%)
			color #fff
			
			span
				vertical-align middle
			

		.img-article
			position fixed
			margin-top -6em
			z-index 0
	
	&-receta
		min-height 45em
				
.box
	&-comentarios
		h3
			display block
			margin 0.5em auto
			text-align center
	
	&-compartir
		margin-top 1em		
		h5
			background-color AzulBase
			color #fff
			display inline-block
			margin 0 auto
			padding 1em 0.8em 
			position relative
			text-align center
			
			&::after
				absolute top 39% right -2px
				background-color AzulBase
				content ""
				height 0.7em
				transform rotate(45deg)
				width @height
			
		.contador-general
			display inline-block
			font-size 1.6em
			margin 0.3em
			
		.contador-social
			font-size 1.6em
			
			.fa, .contador-num
				display inline-block
				vertical-align middle
				
			
			.contador-num
				background-color GrisClaro
				margin-top 0.3em
				text-align center
				position relative
				width 5em

				&::before
					absolute top 28% left -3px
					background-color GrisClaro
					content ""
					height 0.7em
					transform rotate(45deg)
					width @height
					
			.fa
				width 12%
				
				&-facebook
					color #0279c8 

				&-twitter
					color #00b8d5	

	&-compartir-receta
		width 80%
		margin-left 0
		
		.fa-star
			color Naranja !important
			
		.ranking
			color GrisOscuro
			cursor pointer
			font-size 1.5em
			margin-top 0.5em
			transition all ease-in-out
			
			&:hover
				color Naranja
				
				&:before
					content "\f005"				

.btn-nav
	absolute top -5em
	color #fff !important
	margin 0
	padding 0
	transition all ease-in-out 0.3s 
	white-space normal
	width 10em
	z-index 2

	&-left
		left 0
		
		.txt
			transform translateX(-0.5em)
		
	&-right
		right 0
		
		.txt
			transform translateX(0.5em)
		
	&:hover
		box-shadow none !important
		.txt
			opacity 0.99
			transform translateX(0)
	
	.glyphicon, .txt
		display inline-block
		vertical-align middle
		
	.glyphicon
		font-size 2.9em
		width 20%
	
	.txt
		opacity 0
		text-align center
		transition all ease-in-out 0.3s
		width 50%
		
		&-right
			width 42%
			


