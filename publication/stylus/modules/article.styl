.compartir
	background-color GrisClaro
	margin-top 0.5em
	padding 0.2em 0.5em
	
	
	.article-action
			margin-left -0.3em
			margin-top 0.2em
			text-align right
		
		.btn
			text-transform capitalize
			margin 0 auto
			margin-left 1em	
			width 100%				

		.buttons-share
			absolute bottom 2em
			box-shadow 0px 0px 2px 2px rgba(0, 0, 0, .25)
			pointer-events none
			transform translateY(-1em)
			transition all ease-in-out 0.2s
			z-index 2

