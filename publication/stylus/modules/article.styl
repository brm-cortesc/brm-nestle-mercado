			background-color transparent
			border 0
			border-radius 0.1em
			color darken(AzulBase, 40%) !important
			display inline-block
			font-size 1.3em
			margin 0.2em auto
			padding 0
			text-align center
			transform translateX(1em)
			transition all ease-in-out 0.3s
			vertical-align middle
			width 1.5em
			
			&:hover
				box-shadow none !important
				color lighten(AzulBase, 10%) !important
				
	.fa-print
		color darken(AzulBase, 40%)
		cursor pointer
		transition all ease-in-out 0.3s
		
		&:hover
			color lighten(AzulBase, 10%)

.preparacion
	h3
		color GrisOscuro
		font-size 1.5em
		text-align center
		text-transform uppercase

	ol, .paso
		counter-reset li
		position relative
		
		li
			list-style none
			margin-bottom 1em
			transition all ease-in-out 0.2s
			
			&:hover
				&:before
					background-color AzulBase
					transform scale(1.2)
					
			&:before
				absolute left -0.2em
				background-color darken(AzulBase, 30%)
				border-radius 0.2em
				// border-radius 100%
				color #fff 
				content counter(li)
				counter-increment li
				height 1.5em
				padding 0.1em
				text-align center
				transition all ease-in-out 0.2s
				width @height
			

