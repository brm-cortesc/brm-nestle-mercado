.custom-header
	height 50px
	padding 20px 20px 10px 30px
	position relative
	h2
		color AzulBase
		width 60%
		a
			color darken(AzulBase, 40%)
	h3
		color #ddd
		color AzulBase
		font-weight 300
		line-height 30px
		padding-right 125px
		text-align right
		width 40%
	nav
		position absolute
		right 20px
		top 20px
		-webkit-touch-callout none
		-webkit-user-select none
		-khtml-user-select none
		-moz-user-select none
		-ms-user-select none
		user-select none
		span
			// border-radius 0 3px 3px 0
			background rgba(255,255,255,0.3)
			box-shadow inset 0 1px rgba(255,255,255,0.2)
			color AzulBase
			cursor pointer
			float left
			font-size 20px
			height 30px
			margin 0 1px
			position relative
			width 30px
			&:first-child
				// border-radius 3px 0 0 3px
			&:hover
				background rgba(255,255,255,0.5)
			&.custom-prev
				&:before
					content '\25c2'
			&.custom-next
				&:before
					content '\25b8'
			&:last-child
				margin-left 20px
				// border-radius 3px
			&.custom-current
				&:before
					content '\27a6'
	span
		&:before
			font-family 'fontawesome-selected'
			color AzulBase
			display inline-block
			text-align center
			width 100%
			text-indent 4px

.custom-header h2,
.custom-header h3
	float left
	font-weight 300
	text-transform uppercase
	letter-spacing 4px
	// text-shadow 1px 1px 0 rgba(0,0,0,0.1)

.custom-header h2 a, 
.custom-header h2 span
	color rgba(255,255,255,0.3)
	font-size 18px
	letter-spacing 3px
	white-space nowrap


