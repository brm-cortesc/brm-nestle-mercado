.fc-calendar
	// border-radius 20px
	// left 20px
	// right 20px
	background GrisClaro
	bottom 20px
	height 100%
	// margin 0 20px 20px
	position absolute
	top 10px
	width 100%
	.fc-head
		// border-radius 20px 20px 0 0
		// box-shadow inset 0 1px 0 rgba(255,255,255,0.2)
		// display none
		background AzulBase
		border-color #fff
		border-solid 0.5px
		color rgba(255,255,255,0.9)
		height 40px
		line-height 40px
		padding 0 0
		& > div
			font-weight 100
			// text-transform uppercase
			font-size 18px
			// letter-spacing 3px
			// text-shadow 0 1px 1px rgba(0,0,0,0.4)
	.fc-row
		box-shadow inset 0 -1px 0 rgba(255,255,255,0.2)
		border-color #fff
		border-solid 0.5px
		box-shadow none
		& > div
			// border none
			// float none
			border-radius 0px !important
			box-shadow -1px 0 0 rgba(255, 255, 255, 0.2)
			box-shadow inset 0 -1px rgba(255,255,255,0.2) !important
			border-color #fff
			border-solid 0.5px
			cursor pointer
			min-height 50px
			// padding 50px
			& > span
				&.fc-date
					background-color rgba(255, 252, 255, 0.5)
					bottom auto
					color AzulBase
					display inline-block
					font-size 18px
					font-weight 300
					left auto
					right 10px
					text-align center
					text-shadow none
					top 10px
					width 30px
					z-index 2
				
				&.fc-weekday
					display none

					
			&:first-child
				box-shadow none
			&.fc-today
				background transparent
				box-shadow inset 0 0 100px rgba(255,255,255,0.1)
				background rgba(255, 255, 255, 0.2)
				&:after
					display block
					position absolute
					left 0
					width 100%
					height 100%
					opacity 0.2
			& > div
				display inline-block
				left 2.5%
				margin 0
				max-width 95%
				position absolute
				top 50%
				transform translate3d(0,-50%,0)
				width 100%
				z-index 0
				
			&:empty
				min-height 0
				height 0
				box-shadow none !important
				padding 0
		&:last-child
			box-shadow none
			& > div
				&:first-child
					// border-radius 0 0 0 10px
				&:last-child
					// border-radius 0 0 10px 0
		&:first-child
			& > div
				&:first-child
					// border-radius 10px 0 0 0
				&:last-child
					// border-radius 0 10px 0 0
