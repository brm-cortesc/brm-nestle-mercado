#search-input, #search-input-mobile
	.form-group
		border-radius 0.5em
		border 2px solid darken(AzulBase, 40%)
		padding 0.2em 0.5em 
		
		input
			background-image none
			display inline-block
			text-align left
			width 90%

		.glyphicon-search
			color darken(AzulBase, 40%)
			display inline-block
			font-size 1.3em
			width 10%
			
						
#search-input-mobile
	.form-group
		border-color #fff
		
		.glyphicon-search
			color #fff
			


